{
  "name": "ADit",
  "version": "1.0",
  "description": "A browser extension for users to control their ad preference and do good for charity/nonprofits",
  "permissions": ["activeTab","declarativeContent","storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/ADit_logo.png",
      "32": "images/ADit_logo.png",
      "48": "images/ADit_logo.png",
      "128": "images/ADit_logo.png"
    }
  },
  "icons": {
    "16": "images/ADit_logo.png",
    "32": "images/ADit_logo.png",
    "48": "images/ADit_logo.png",
    "128": "images/ADit_logo.png"
  },
  "manifest_version": 2
}
